/*
  HCL2 Imagefile

  Variable Namespaces

  Environment:

  env.ENV_VAR
*/

Image "snarf" {
  os = "${ env.OS }"
  arch = "${ env.ARCH }"
}

Repo "somevendor" {
  enabled = true
  priority = 10

  fetch {
    uri = "file:///Users/sigil/Repos/somevendor.io/software"
  }
}

Repo "anothervendor" {
  enabled = true
  priority = 10

  fetch {
    uri = "https://anothervendor.io/packages/anothervendor.io/software"
  }
}

Config "component-two" {
  profile "default" {
    values = {
      nacho = "horse"
      types = [
        "idiot",
        "spleen"
      ]
    }
  }

  profile "local" {
    values = {
      nacho = "darth"
      types = [
        "bacon",
        "fresh"
      ]
    }
  }
}

Template "a-template" {
  // package name to register with for config runs
  register = "snarf"
  source = "/path/to/template"
  output = "/path/to/output"
}

Package "snarf" {
  // ANY, GTE, LTE, EQ, EXQ
  operation = "EQ"
  version = "1.0.1"
}

Package "hodor" {
  operation = "ANY"
}

Package "bacon" {
  operation = "ANY"
}