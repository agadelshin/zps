Zpkg "testpkg" {
  publisher = "solvent"
  version = "0.0.1"
  summary = "Zpkg test pkg"
  description = "The long description of the Zpkg test package, that is long, because it needs to be long."
  os = "${ env.OS }"
  arch = "${ env.ARCH }"
}

Requirement "deppkg" {
  method = "depends"
  operation = "ANY"
}

Tag "zps.vcs.uri" {
  value = "https://github.com/solvent-io/testpkg"
}

